<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_main">

    <!-- Header with logo and app name -->
    <ImageView
        android:id="@+id/nav_header_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:src="@drawable/agoi_logo2" />

    <!-- Main navigation items -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">

            <!-- Profile Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROFILE"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins_semibold"
                android:paddingStart="8dp"
                android:visibility="gone"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:id="@+id/nav_my_profile_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/white"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Profile"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                                        android:fontFamily="@font/poppins_semibold"
                    android:layout_marginStart="16dp" />
            </LinearLayout>


            <!-- Settings Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SETTINGS"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/poppins_semibold"
                android:paddingStart="8dp"
                android:paddingTop="16dp"
                android:visibility="gone"

                android:paddingBottom="8dp" />

            <LinearLayout
                android:id="@+id/nav_settings_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/white"
                    android:src="@drawable/ic_settings" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                                        android:fontFamily="@font/poppins_semibold"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_help_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/white"
                    android:src="@drawable/ic_help_desk" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help &amp; Support"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                                        android:fontFamily="@font/poppins_semibold"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_developers_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    app:tint="@color/white"

                    android:layout_height="24dp"
                    android:src="@drawable/ic_code" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Developers"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                                        android:fontFamily="@font/poppins_semibold"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Theme toggle switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:padding="12dp">

            <ImageView
                android:id="@+id/theme_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/white"

                android:src="@drawable/ic_night_mode" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dark Mode"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginStart="16dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/theme_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:thumbTint="@color/white"
                app:trackTint="@color/light_gray"
                android:checked="false" />
        </LinearLayout>

        <!-- Sign Out Button -->
        <LinearLayout
            android:id="@+id/nav_sign_out_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/white"

                android:src="@drawable/ic_switch" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 