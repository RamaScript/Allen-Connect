<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <View
        android:id="@+id/shimmer_profile_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shimmer_circle_background" />

    <View
        android:id="@+id/shimmer_user_name"
        android:layout_width="150dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/shimmer_profile_image"
        android:background="@drawable/shimmer_rect_background" />

    <View
        android:id="@+id/shimmer_last_message"
        android:layout_width="180dp"
        android:layout_height="12dp"
        android:layout_below="@id/shimmer_user_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/shimmer_profile_image"
        android:background="@drawable/shimmer_rect_background" />

    <View
        android:id="@+id/shimmer_time"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shimmer_rect_background" />

</RelativeLayout> 