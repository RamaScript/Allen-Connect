<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_coordinator_layout"
    android:fitsSystemWindows="false">

    <!-- Header AppBarLayout with scroll behavior -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:liftOnScroll="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_scrollFlags="noScroll">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Profile"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/profileSettingsMenuBtn"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                app:srcCompat="@drawable/ic_more"
                app:tint="@color/dark_gray" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Wrapper container for both content and shimmer -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Main content container -->
            <LinearLayout
                android:id="@+id/profileContentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Profile Image Container -->

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_avatar"
                            />


                <!-- Profile Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <!-- Name -->
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="24dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        tools:text="Dave C. Brown"/>

                    <!-- Username/Profession -->
                    <TextView
                        android:id="@+id/professionTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_marginHorizontal="24dp"

                        android:textColor="@color/gray"
                        android:fontFamily="@font/poppins"
                        tools:text="abcd"/>

                    <!-- Bio -->
                    <TextView
                        android:id="@+id/BioTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_marginHorizontal="24dp"

                        android:layout_marginTop="4dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/poppins"
                        tools:text="Google Certified UX/UI Designer"/>

                    <!-- Stats Container -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        android:layout_marginVertical="16dp"
                        android:layout_marginHorizontal="24dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">

                            <!-- Posts -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/postsCountTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    tools:text="50" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="Posts"
                                    android:textColor="@color/gray"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- Followers -->
                            <LinearLayout
                                android:id="@+id/followersLabel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/followersCountTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    tools:text="5k" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="Followers"
                                    android:textColor="@color/gray"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- Following -->
                            <LinearLayout
                                android:id="@+id/followingLabel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/followingCountTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    tools:text="12k" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins"
                                    android:text="Following"
                                    android:textColor="@color/gray"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Follow Button -->

                    <!-- Message Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/followButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_btn"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Follow"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            app:cornerRadius="24dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/messageButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btnbg"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Message"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            android:layout_margin="8dp"
                            android:textColor="@color/white"
                            android:visibility="visible"
                            app:cornerRadius="24dp" />
                    </LinearLayout>

                    <!-- Tabs -->

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        >

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tabGravity="fill"
                            android:background="@color/transparent"
                            app:tabIndicatorColor="@color/color_primary"
                            app:tabMode="fixed"
                            app:tabSelectedTextColor="@color/color_primary"
                            app:tabTextColor="@color/gray">

                            <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Post" />

                            <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Details" />
                        </com.google.android.material.tabs.TabLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- ViewPager for Posts and Details -->
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:minHeight="400dp"
                        android:layout_marginBottom="80dp"
                        android:clipToPadding="false"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="true"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Shimmer layout for loading state -->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/profileShimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="visible">
                
                <include layout="@layout/shimmer_profile" />
                
            </com.facebook.shimmer.ShimmerFrameLayout>
        
        </FrameLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>