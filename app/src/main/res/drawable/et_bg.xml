<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@color/white"/> <!-- Light grey background color -->

    <!-- Border color and width -->
    <stroke
        android:color="@color/light_gray"
    android:width="1dp"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/> <!-- 12dp corner radius -->

    <!-- Padding for content inside EditText (optional) -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="4dp"/>
</shape>
